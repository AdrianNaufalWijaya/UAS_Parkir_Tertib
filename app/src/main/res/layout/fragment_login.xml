<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_login"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Status Bar Spacer -->
        <View
            android:id="@+id/statusBarSpacer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Modern Back Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="2dp"/>

        </androidx.cardview.widget.CardView>

        <!-- Main Login Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            android:backgroundTint="#FFFFFF"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="36dp">

                <!-- Animated Logo Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#F8F9FF"
                    android:layout_gravity="center"
                    android:layout_marginBottom="28dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_parkir"
                        android:padding="24dp"
                        android:scaleType="centerInside"/>

                </androidx.cardview.widget.CardView>

                <!-- Welcome Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="36dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Masuk Akun"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat datang kembali! Masukkan kredensial Anda"
                        android:textSize="15sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

                <!-- Enhanced Email Input -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#F8FAFF"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="#1976D2"
                        app:hintTextColor="@color/black"
                        app:boxBackgroundColor="@android:color/transparent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ðŸ“§ Email Address"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif"
                            android:paddingVertical="16dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <!-- Enhanced Password Input -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#F8FAFF"
                    android:layout_marginBottom="28dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="#1976D2"
                        app:hintTextColor="@color/black"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#1976D2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ðŸ”’ Password"
                            android:inputType="textPassword"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif"
                            android:paddingVertical="16dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <!-- Modern Login Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#1A237E"
                    android:layout_marginBottom="28dp">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="MASUK SEKARANG"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"/>

                </androidx.cardview.widget.CardView>

                <!-- Elegant Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="20dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="atau"
                        android:textColor="#94A3B8"
                        android:textSize="14sp"
                        android:paddingHorizontal="16dp"
                        android:fontFamily="sans-serif"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0"/>

                </LinearLayout>

                <!-- Action Links Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Register Link -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#E3F2FD"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/textRegister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum punya akun? Daftar di sini"
                            android:textColor="#1976D2"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:fontFamily="sans-serif-medium"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Forgot Password Link -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#FFF3E0">

                        <TextView
                            android:id="@+id/textLupaPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lupa Password?"
                            android:textColor="#F57C00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="12dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:fontFamily="sans-serif-medium"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Security Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#F0FDF4"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cardLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/cardLogin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
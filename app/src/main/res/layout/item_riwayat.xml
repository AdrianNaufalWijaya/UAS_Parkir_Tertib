<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#1E1E1E"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/tv_tanggal"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="22 Jul"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_plat_nomor"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:text="D 1234 ABC"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_jamMasuk"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="09:00"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_jamKeluar"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="11:10"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_status"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Selesai"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_biaya"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="Rp 6.000"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:textSize="9sp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"/>

    <!-- Status indicator (hidden, but keeping ID for compatibility) -->
    <TextView
        android:id="@+id/tv_durasi"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:visibility="gone"/>

</LinearLayout>
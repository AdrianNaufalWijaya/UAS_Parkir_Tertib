<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Filter Button Style -->
    <style name="FilterButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/filter_button_text_color</item>
        <item name="android:background">@drawable/filter_button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Alternative: Material Design Button Style -->
    <style name="FilterButtonMaterialStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/filter_button_stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/filter_button_text_color</item>
        <item name="backgroundTint">@color/filter_button_background_color</item>
    </style>

    <!-- Simple Rounded Button Style -->
    <style name="FilterButtonSimple" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>